generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//enums
enum GymRole {
  ADMIN
  PROFESSOR
  MANAGER
  STUDENT
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}


//entities

model User {
  id        String @id @default(ulid())
  email     String @unique
  password  String
  name      String
  birthday  DateTime

  sports    UserSport[]
  gyms      UserGym[]

  graduations Graduation[]  @relation("GraduationStudent")
  grantedGraduations Graduation[] @relation("GraduationTeacher")

  ownedGyms Gym[] @relation("Gym_ownerId")
}

model Gym {
  id          String   @id @default(ulid()) 
  name        String    @unique
  description String?
  ownerId     String    

  owner       User      @relation("Gym_ownerId", fields: [ownerId], references: [id])
  sports      GymSport[]
  teams       GymTeam[]
  users       UserGym[] 
}

model GymTeam {
  id          String   @id @default(ulid()) 
  name        String
  description String?
  openTime    String?
  closeTime   String?

  gymId       String
  sportId     String

  gym         Gym      @relation(fields: [gymId], references: [id])
  sport       Sport    @relation(fields: [sportId], references: [id])

  schedules TeamSchedule[]

  @@index([gymId, sportId])
}

model TeamSchedule{
  id          String   @id @default(ulid()) 
  dayOfWeek DayOfWeek
  startTime String
  endTime String?

  teamId  String
  team      GymTeam    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
}

model Sport {
  id          String   @id @default(ulid()) 
  name   String  @unique

  users UserSport[]
  gyms   GymSport[]
  userGyms UserGym[]        
  teams    GymTeam[]       
  graduations Graduation[]  
}


//relations 

model GymSport {
  gymId   String
  sportId String

  gym     Gym   @relation(fields: [gymId], references: [id])
  sport   Sport @relation(fields: [sportId], references: [id])

  @@id([gymId, sportId])
}

model UserSport {
  userId  String
  sportId String

  user    User  @relation(fields: [userId], references: [id])
  sport   Sport @relation(fields: [sportId], references: [id])

  @@id([userId, sportId])
}

model UserGym {
  userId  String
  gymId   String
  sportId String

  user    User @relation(fields: [userId], references: [id])
  gym     Gym  @relation(fields: [gymId], references: [id])
  sport   Sport @relation(fields: [sportId], references: [id])

  role    GymRole

  @@id([userId, gymId, sportId])
}

model Graduation {
  id          String   @id @default(ulid()) 
  level     String
  date      DateTime @default(now())

  studentId String
  teacherId String?
  sportId   String

  student   User     @relation("GraduationStudent", fields: [studentId], references: [id])
  teacher   User?    @relation("GraduationTeacher", fields: [teacherId], references: [id])
  sport     Sport    @relation(fields: [sportId], references: [id])
}